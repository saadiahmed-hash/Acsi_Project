<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/regWhite"
    android:backgroundTint="@color/regWhite"
    >



    <FrameLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/frameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bottom_back"
        android:layout_margin="10dp"
        android:paddingVertical="4dp"
        >
        <LinearLayout

            android:id="@+id/addProductBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <ImageView
                android:id="@+id/addProdImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_prod">

            </ImageView>
            <TextView
                android:id="@+id/addProdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add product"
                android:fontFamily="@font/ubuntu_med"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/prodListBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <ImageView
                android:id="@+id/prodListImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/boxes"
                app:tint="@color/black">

            </ImageView>
            <TextView
                android:id="@+id/prodListTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products List"
                android:fontFamily="@font/ubuntu_med"
                android:textColor="@color/gray"
                >
            </TextView>
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>